    <script src="https://www.paypal.com/sdk/js?client-id=AShHA7LRHXBp7nwEXq8M4l4LOGXPl2Ht9Ynrm5S_tOvtjTZHBXYrb6qaSNJqj-DuUpuQ1uAwT4syT_TQ&currency=USD" onload="initPayPal()"></script>
    <script>
        let selectedAmount = 0;
        let paypalReady = false;

        function initPayPal() {
            paypalReady = true;
            document.getElementById('paypal-container').innerHTML = '<p style="text-align:center;color:#0c0;padding:2rem">Select an amount above to donate</p>';
        }

        async function lookupIP() {
            const ip = document.getElementById('ipInput').value.trim();
            const result = document.getElementById('ipResult');
            if (!ip) {
                result.style.display = 'block';
                result.innerHTML = '<span style="color:#f00">Please enter an IP address</span>';
                return;
            }
            result.style.display = 'block';
            result.innerHTML = '<span style="color:#ff0">‚ö° Scanning...</span>';
            try {
                const res = await fetch(`https://ipapi.co/${ip}/json/`);
                const data = await res.json();
                if (data.error) {
                    result.innerHTML = `<span style="color:#f00">Error: ${data.reason}</span>`;
                } else {
                    result.innerHTML = `<div style="line-height:1.8"><span style="color:#0f0">IP:</span> ${data.ip}<br>
                    <span style="color:#0f0">City:</span> ${data.city||'N/A'}<br>
                    <span style="color:#0f0">Region:</span> ${data.region||'N/A'}<br>
                    <span style="color:#0f0">Country:</span> ${data.country_name||'N/A'}<br>
                    <span style="color:#0f0">ISP:</span> ${data.org||'N/A'}<br>
                    <span style="color:#0f0">Timezone:</span> ${data.timezone||'N/A'}</div>`;
                }
            } catch(e) {
                result.innerHTML = '<span style="color:#f00">Error: API request failed. This may be blocked by CORS policy.</span>';
                console.error('IP Lookup error:', e);
            }
        }

        async function lookupMAC() {
            const mac = document.getElementById('macInput').value.trim();
            const result = document.getElementById('macResult');
            if (!mac) {
                result.style.display = 'block';
                result.innerHTML = '<span style="color:#f00">Please enter a MAC address</span>';
                return;
            }
            result.style.display = 'block';
            result.innerHTML = '<span style="color:#ff0">‚ö° Scanning...</span>';
            try {
                const res = await fetch(`https://api.macvendors.com/${mac}`);
                if (res.ok) {
                    const vendor = await res.text();
                    const oui = mac.replace(/[:-]/g, '').substring(0, 6).toUpperCase();
                    result.innerHTML = `<div style="line-height:1.8"><span style="color:#0f0">MAC:</span> ${mac}<br>
                    <span style="color:#0f0">Vendor:</span> ${vendor}<br>
                    <span style="color:#0f0">OUI:</span> ${oui}</div>`;
                } else {
                    result.innerHTML = '<span style="color:#f00">Vendor not found or invalid MAC address</span>';
                }
            } catch(e) {
                result.innerHTML = '<span style="color:#f00">Error: API request failed. This may be blocked by CORS policy.</span>';
                console.error('MAC Lookup error:', e);
            }
        }

        async function getMyIP() {
            const result = document.getElementById('myipResult');
            result.style.display = 'block';
            result.innerHTML = '<span style="color:#ff0">‚ö° Fetching your IP info...</span>';
            try {
                const res = await fetch('https://ipapi.co/json/');
                const data = await res.json();
                result.innerHTML = `<div style="line-height:1.8"><span style="color:#0f0">Your IP:</span> ${data.ip}<br>
                <span style="color:#0f0">City:</span> ${data.city||'N/A'}<br>
                <span style="color:#0f0">Region:</span> ${data.region||'N/A'}<br>
                <span style="color:#0f0">Country:</span> ${data.country_name||'N/A'}<br>
                <span style="color:#0f0">ISP:</span> ${data.org||'N/A'}<br>
                <span style="color:#0f0">Timezone:</span> ${data.timezone||'N/A'}<br>
                <span style="color:#0f0">Postal:</span> ${data.postal||'N/A'}</div>`;
            } catch(e) {
                result.innerHTML = '<span style="color:#f00">Error: API request failed. This may be blocked by CORS policy.</span>';
                console.error('MyIP error:', e);
            }
        }

        async function lookupDomain() {
            const domain = document.getElementById('domainInput').value.trim();
            const result = document.getElementById('domainResult');
            if (!domain) {
                result.style.display = 'block';
                result.innerHTML = '<span style="color:#f00">Please enter a domain name</span>';
                return;
            }
            result.style.display = 'block';
            result.innerHTML = '<span style="color:#ff0">‚ö° Resolving...</span>';
            try {
                const res = await fetch(`https://dns.google/resolve?name=${domain}&type=A`);
                const data = await res.json();
                if (data.Answer && data.Answer.length > 0) {
                    const ips = data.Answer.filter(a => a.type === 1).map(a => a.data).join(', ');
                    result.innerHTML = `<div style="line-height:1.8"><span style="color:#0f0">Domain:</span> ${domain}<br>
                    <span style="color:#0f0">IP Address(es):</span> ${ips||'N/A'}<br>
                    <span style="color:#0f0">Records Found:</span> ${data.Answer.length}</div>`;
                } else {
                    result.innerHTML = '<span style="color:#f00">No DNS records found</span>';
                }
            } catch(e) {
                result.innerHTML = '<span style="color:#f00">Error: API request failed. This may be blocked by CORS policy.</span>';
                console.error('Domain Lookup error:', e);
            }
        }

        function selectAmount(amount) {
            if (!paypalReady) {
                alert('PayPal is still loading, please wait a moment...');
                return;
            }
            selectedAmount = amount;
            document.querySelectorAll('.need-card').forEach(c => c.classList.remove('selected'));
            event.target.closest('.need-card').classList.add('selected');
            document.getElementById('customAmount').value = '';
            renderPayPal();
        }

        function handleCustomAmount() {
            if (!paypalReady) {
                return;
            }
            const val = parseFloat(document.getElementById('customAmount').value) || 0;
            selectedAmount = val;
            document.querySelectorAll('.need-card').forEach(c => c.classList.remove('selected'));
            if (val > 0) renderPayPal();
        }

        function renderPayPal() {
            const container = document.getElementById('paypal-container');
            container.innerHTML = '';
            if (selectedAmount <= 0) {
                container.innerHTML = '<p style="text-align:center;color:#0c0;padding:2rem">Select amount above</p>';
                return;
            }
            
            if (typeof paypal === 'undefined') {
                container.innerHTML = '<p style="text-align:center;color:#f00;padding:2rem">PayPal SDK failed to load</p>';
                return;
            }
            
            paypal.Buttons({
                createOrder: (data, actions) => actions.order.create({
                    purchase_units: [{
                        amount: { value: selectedAmount.toFixed(2) },
                        description: 'Support for essential needs'
                    }]
                }),
                onApprove: (data, actions) => actions.order.capture().then(details => {
                    document.getElementById('success').style.display = 'block';
                    document.getElementById('success').scrollIntoView({ behavior: 'smooth' });
                    setTimeout(() => {
                        selectedAmount = 0;
                        document.getElementById('customAmount').value = '';
                        document.querySelectorAll('.need-card').forEach(c => c.classList.remove('selected'));
                        container.innerHTML = '<p style="text-align:center;color:#0c0;padding:2rem">Select amount above</p>';
                        document.getElementById('success').style.display = 'none';
                    }, 5000);
                }),
                onError: err => {
                    alert('Payment error. Please try again.');
                    console.error('PayPal error:', err);
                }
            }).render('#paypal-container');
        }
    </script>
</body>
